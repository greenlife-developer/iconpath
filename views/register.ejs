<%- include ("partials/header") %>

<div id="titlebar" class="gradient">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Register</h2>
                <nav id="breadcrumbs" class="dark">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Register</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-xl-6">
            <div class="login_first_blank_section"></div>
        </div>
        <div class="col-md-12 col-lg-6 col-xl-6">
            <div class="login-register-page">
                <div class="welcome-text">
                    <h3 style="font-size: 26px;">Let's create your account!</h3>
                    <span>Already have an account? <a href="/login">Log In!</a></span>
                </div>
                <% if(typeof query.error !== "undefined"){ %>
                    <div class="notification error closeable">
                        <% if(query.error == "mismatch"){ %>
                            Password does not match
                        <% } %>
                        <% if(query.error == "exists"){ %>
                            Email already used!
                        <% } %>
                    </div>
                <% } %>
                <form action="/register" method="POST">
                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="text" class="input-text with-border" name="name" placeholder="Enter name" required />
                    </div>
                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="email" class="input-text with-border" name="email" placeholder="Email Address" required />
                    </div>

                    <div class="input-with-icon-left" data-tippy-placement="bottom">
                        <i class="icon-material-outline-lock"></i>
                        <input type="password" class="input-text with-border" name="password" placeholder="Password" required>
                    </div>
                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-lock"></i>
                        <input type="password" class="input-text with-border" name="confirm_password" placeholder="Repeat Password" required>
                    </div>
                    <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit">Register 
                        <i class="icon-material-outline-arrow-right-alt"></i></button>
                </form>
                <br><br>
                <button class="button red_google_background full-width button-slidding-icon ripple-effect"><i class="fab fa-google left"></i>&nbsp; &nbsp; Register with google</button>
            </div>
        </div>
    </div>
</div>

<%- include ("partials/footer") %>