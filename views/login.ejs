<%- include ("partials/header") %>

    <div class="gradient" id="titlebar">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Log In</h2>
                    <nav class="dark" id="breadcrumbs">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>Log In</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-xl-6">
                    <div class="login_first_blank_section"></div>
            </div>
            <div class="col-md-12 col-lg-6 col-xl-6">
                <div class="login-register-page">
                    <div class="welcome-text">
                        <h3>We're glad to see you again!</h3>
                        <span>Don't have an account? <a href="/register">Sign Up!</a></span>
                    </div>

                    <% if(typeof query.message !== "undefined" ) { %>
                        <div class="notification success closeable">
                            <% if(query.message==="registered" ) { %>
                                Account has been created. Please login now.
                                <% } %>
                                    <% if(query.message==="password_reset" ) { %>
                                        Password has been changed. Please login now.
                                        <% } %>
                        </div>
                        <% } %>
                        <% if(typeof query.error !== "undefined" ){ %>
                            <div class="notification error closeable">
                                <% if(query.error=="not_exists" ){ %>
                                    Email deos not exist
                                    <% } %>

                                        <% if(query.error=="wrong_password" ){ %>
                                            Password is incorect.
                                            <% } %>

                                                <% if(query.error=="user_deleted" ){ %>
                                                    User has been deleted.
                                                    <% } %>
                            </div>
                            <% } %>

                                <form action="/login" method="POST">
                                    <div class="input-with-icon-left">
                                        <i class="icon-material-baseline-mail-outline"></i>
                                        <input type="text" placeholder="Email Address" name="email" class="input-text with-border" required autocomplete="" />
                                    </div>
                                    <div class="input-with-icon-left">
                                        <i class="icon-material-outline-lock"></i>
                                        <input type="password" class="input-text with-border" name="password" placeholder="Password" required autocomplete="" />
                                    </div>
                                    <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit">Log In <i class="icon-material-outline-arrow-right-alt"></i></button>
                                </form> <br><br>
                                <button class="button red_google_background full-width button-slidding-icon ripple-effect"><i class="fab fa-google left"></i>&nbsp; &nbsp; Login with google</button>
                </div>
            </div>
        </div> 
    </div>

<%- include ("partials/footer") %>